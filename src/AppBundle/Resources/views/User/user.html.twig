{% extends "::base.html.twig" %}

{% block title %}Homepage - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <section id="user">
        <div class="container">
            <div class="row">
                <div class=" col-lg-6 text-center">
                    <div class="well row">
                        <div class=" col-lg-12 text-left">
<div>
                                <p>Esate: <span style="background-color: aqua; float: right">{{ userId }} </span> </p>
</div>
                                <p>Pasirinkote paslaugą: <span style="background-color: aqua; float: right">{{ serviceOne.title }}  </span></p>

                                <p>Kaina: <span style="background-color: aqua; float: right">{{ serviceOne.price }} {{ 'services.money'|trans }}  </span></p>

                                <p style="text-transform: capitalize;">
                                    {{ 'services.time'|trans }}:
                                    <span style="background-color: aqua; float: right">
                                    {{ serviceOne.durationInMinutes }}
                                    {{ 'services.duration'|trans }}
                                         </span>
                                </p>

                        </div>



                    </div>
                    <div class="form-group">
                        <label for="sel1">Pasirinkite darbuotoją:</label>
                        <select class="form-control" id="sel1">
                            {% for worker in workerByService %}
                                <option>{{ worker }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div id='external-events'>
                        <h4>Perkelkite laiką</h4>
                        <div data-title="{{ serviceOne.title }}, {{ userId }}" id="some-title"
                             class="fc-event ui-draggable ui-draggable">{{ serviceOne.title }} {{ userId }}</div>
                        <div data-duration="{{ serviceOne.durationInMinutes }}" id="some-duration"></div>

                        {#<div class='fc-event'>My Event 1</div>#}
                        {#<div class='fc-event'>My Event 2</div>#}
                        {#<div class='fc-event'>My Event 3</div>#}
                        {#<div class='fc-event'>My Event 4</div>#}
                        {#<div class='fc-event'>My Event 5</div>#}
                        {#<p>#}
                        {#<input type='checkbox' id='drop-remove' />#}
                        <label for='drop-remove'>remove after drop</label>
                        {#</p>#}
                    </div>
                    {#</form>#}
                </div>
                <div class="col-lg-6 text-center">
                    <div id='wrap'>
                        {% include '@FullCalendar/Calendar/calendar.html.twig' %}
                        <div style='clear:both'></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
