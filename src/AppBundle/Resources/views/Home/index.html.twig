{% extends "::base.html.twig" %}

{% block title %}Homepage - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <!-- FirstPage -->
    <section class="bg" id="home">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>{{ 'homepage.title'|trans }}</h1>
                    <a href="#galery" class="btn btn-lg btn-outline js-scroll-trigger btn btn-primary btn-lg"
                       role="button">
                        <i class="fa fa-image"></i> {{ 'homepage.button'|trans }}
                    </a>
                    <!-- BEGIN # MODAL LOGIN -->
                    <div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                         aria-hidden="true" style="display: none;">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header" align="center">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                    </button>
                                    <h2>Eglės Nagų Studija</h2>
                                </div>
                                <!-- Begin # DIV Form -->
                                <div id="div-forms">
                                    <!-- Begin | Register Form -->
                                    <form id="register-form" style="display:none;">
                                        <div class="modal-body">
                                            <div id="div-register-msg">
                                                <div id="icon-register-msg"
                                                     class="glyphicon glyphicon-chevron-right"></div>
                                                <span id="text-register-msg">Register an account.</span>
                                            </div>
                                            <input id="register_username" class="form-control" type="text"
                                                   placeholder="Username (type ERROR for error effect)" required>
                                            <input id="register_email" class="form-control" type="text"
                                                   placeholder="E-Mail" required>
                                            <input id="register_password" class="form-control" type="password"
                                                   placeholder="Password" required>
                                        </div>
                                        <div class="modal-footer">
                                            <div>
                                                <button type="submit" class="btn btn-primary btn-lg btn-block">
                                                    Register
                                                </button>
                                            </div>
                                            <div>
                                                <button id="register_login_btn" type="button" class="btn btn-link">Log
                                                    In
                                                </button>
                                                <button id="register_lost_btn" type="button" class="btn btn-link">Lost
                                                    Password?
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                    <!-- End | Register Form -->
                                </div>
                                <!-- End # DIV Form -->
                            </div>
                        </div>
                    </div>
                    <!-- END # MODAL LOGIN -->
                </div>
            </div>
        </div>
    </section>

    <!-- scroll top btn -->
    <div id="scrollTop" class="btn-outline">
        <i class="fa fa-angle-up"></i>
    </div><!-- end scroll top btn -->

    <!-- Galery -->
    <section id="galery">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">{{ 'galery.header' |trans }} </h2>
                </div>
            </div>
            <div class="row photos">
                <div class=" col-md-3 text-center">
                    <a href="https://www.instagram.com/p/Bb3gwqXl0o3/?taken-by=eglesnagustudija" target="_blank">
                        <img class="img-rounded" src="/images/3.jpg" alt="">
                    </a>
                </div>
                <div class="col-md-3 text-center">
                    <a href="https://www.instagram.com/p/Bb79n6OFzJj/?taken-by=eglesnagustudija" target="_blank">
                        <img class="img-rounded" src="/images/4.jpg" alt="">
                    </a>
                </div>
                <div class="col-md-3 text-center">
                    <a href="https://www.instagram.com/p/Bb3hBVBlAe7/?taken-by=eglesnagustudija" target="_blank">
                        <img class="img-rounded" src="/images/2.jpg" alt="">
                    </a>
                </div>
                <div class="col-md-3 text-center">
                    <a href="https://www.instagram.com/p/Baqejy9FPb3/?taken-by=eglesnagustudija" target="_blank">
                        <img class="img-rounded" src="/images/1.jpg" alt="">
                    </a>
                </div>
            </div>
            <a href="">
                <i class="" aria-hidden="true"></i></a>
            <a href="https://www.instagram.com/eglesnagustudija/" class="btn btn-lg btn-outline js-scroll-trigger"
               target="_blank">
                <i class="fa fa-instagram"></i> {{ 'galery.button' |trans }}
            </a>
        </div>
    </section>

    <!-- Services -->
    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">{{ 'services.header'|trans }}</h2>
                </div>
            </div>
            <div class="services row text-center">
                {% for service in services %}
                    <div class="service col-lg-6">
                        <h4 class="service-heading">{{ service.title }}</h4>
                        <div class="content">
                            <p class="text-muted">{{ service.about }}</p>
                            <i class="fa fa-clock-o text-muted" aria-hidden="true"> Time
                                duration {{ service.duration|date('H:i') }} val.</i><br>
                            <i class="fa fa-money text-muted" aria-hidden="true"> {{ service.price }} Eur </i>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- Team -->
    <section class="bg-light" id="team">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">{{ 'ourteam.header'|trans }}</h2>
                </div>
            </div>
            <div class="row-fluid">
                <div class="col-md-12">
                    <div class="carousel slide multi-item-carousel carousel-fade" id="theCarousel">
                        <div class="carousel-inner">
                            {% for worker in workers %}
                                <div class="item">
                                    <div class="col-sm-4">
                                        <div class="team-member">
                                            <img class="mx-auto" src="{{ '/uploads/images/workers/' ~ worker.image }}"
                                                 alt="">
                                            <h4>{{ worker.name }}</h4>
                                            <p>{{ worker.position }}</p>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <a class="left carousel-control" href="#theCarousel" data-slide="prev"><i
                                    class="glyphicon glyphicon-chevron-left"></i></a>
                        <a class="right carousel-control" href="#theCarousel" data-slide="next"><i
                                    class="glyphicon glyphicon-chevron-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Brands -->
    <section id="brands">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">{{ 'brands.header'|trans }}</h2>
                </div>
            </div>
            <div class="brands row text-center">
                <div class="col-md-2">
                    <a href="https://www.alveca.de/" target="_blank">
                        <img src="/images/alveca.JPG" alt="">
                    </a>
                </div>
                <div class="col-md-2">
                    <a href="http://www.firstgel.de/" target="_blank">
                        <img src="/images/firstgel-logo.png " alt="">
                    </a>
                </div>
                <div class="col-md-2">
                    <a href="https://kineticsbeauty.com/" target="_blank">
                        <img src="/images/kinetics.png" alt="">
                    </a>
                </div>
                <div class="col-md-2">
                    <a href="http://senses.lt/" target="_blank">
                        <img src="/images/senses.png" alt="">
                    </a>
                </div>
                <div class="col-md-2">
                    <a href="https://trendnails-international.com/" target="_blank">
                        <img src="/images/trendnails-international-logo.jpg" alt="">
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Contacts -->
    <section id="contacts">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">{{ 'contacts.header'|trans }}</h2>
                    <hr class="primary">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 text-center">
                    <i class="fa fa-phone fa-4x sr-contact"></i>
                    <p>{{ 'contacts.phone'|trans }}</p>
                </div>
                <div class="col-lg-4 text-center">
                    <i class="fa fa-address-book fa-4x sr-contact " aria-hidden="true"></i>
                    <p>{{ 'contacts.address'|trans }}</p>
                </div>
                <div class="col-lg-4 text-center">
                    <i class="fa fa-envelope-o fa-4x sr-contact"></i>
                    <p><!--<a href="mailto:your-email@your-domain.com">-->{{ 'contacts.email'|trans }}<!--</a>--></p>
                </div>
                <div class="col-lg-12 text-center">
                    <i class="fa fa-map-marker fa-4x"></i>
                    <p>{{ 'contacts.place'|trans }}</p>
                </div>
            </div>
        </div>
        <div id="map"></div>

    </section>
{% endblock %}
